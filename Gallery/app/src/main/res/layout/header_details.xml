<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000">

    <ImageButton
        android:id="@+id/getBackButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/component1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-15dp"
        android:layout_toStartOf="@id/component2"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_tag_foreground"
        app:layout_constraintEnd_toStartOf="@+id/component2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/component2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-15dp"
        android:layout_toStartOf="@id/component3"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_album_white_foreground"
        app:layout_constraintEnd_toStartOf="@+id/component3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/component3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="-20dp"
        android:layout_toStartOf="@id/component2"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_wallpaper_white_foreground"
        app:layout_constraintEnd_toStartOf="@+id/component4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/component4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-10dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_more_white_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>