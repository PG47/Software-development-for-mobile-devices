<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#808080">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/option1">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_share_foreground"
                android:contentDescription="TODO"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/option2"
            android:layout_toRightOf="@+id/option1"
            android:layout_marginLeft="2dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_edit_foreground"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/option2"
            android:layout_marginLeft="2dp"
            android:id="@+id/option3">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_camera_foreground"
                android:contentDescription="TODO"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/option4"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/option3">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_delete_foreground"
                android:contentDescription="TODO"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>