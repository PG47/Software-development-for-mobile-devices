<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/outerLayout">
        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingVertical="15dp"
                android:text="30°"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/rotate30deg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingVertical="15dp"
                android:text="45°"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/rotate45deg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingVertical="15dp"
                android:text="60°"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/rotate60deg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border_new"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/rotateAngle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0°"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingVertical="15dp"
                android:text="90°"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:id="@+id/rotate90deg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/rotate135deg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="135°"
                android:textAlignment="center"
                android:paddingVertical="15dp"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_border"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/rotate180deg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:paddingVertical="15dp"
                android:text="180°"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outerLayout"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:max="360"
        android:progress="180"
        android:progressBackgroundTint="@color/black"
        android:tickMark="@drawable/tick_mark"
        android:progressTint="#0000"
        android:thumb="@drawable/custom_thumb"
        android:tickMarkTintMode="multiply"
        android:id="@+id/testSeekBar"/>

</RelativeLayout>