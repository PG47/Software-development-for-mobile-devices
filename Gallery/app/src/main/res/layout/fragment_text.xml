<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_centerVertical="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/font"
        android:gravity="center"
        android:layout_above="@id/typeFace">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font family:"
            android:textColor="@color/white"
            android:id="@+id/fontTextView"
            android:textSize="13sp"/>

        <Spinner
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:layout_marginLeft="4dp"
            android:id="@+id/listFonts"
            android:textAlignment="center"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Font size:"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <EditText
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/border"
            android:layout_marginLeft="4dp"
            android:text="11"
            android:id="@+id/fontSize"
            android:textAlignment="center"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/typeFace"
        android:gravity="center"
        android:layout_marginVertical="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Type face:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:paddingVertical="14dp"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="I"
            android:textSize="30dp"
            android:id="@+id/italic"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:paddingVertical="3dp"
            android:background="@drawable/border"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="B"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/bold"
            android:layout_marginLeft="5dp"
            android:paddingVertical="3dp"
            android:background="@drawable/border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeFace">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_palette_foreground"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawHorizontalTrack="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listColor"
                android:orientation="horizontal"
                android:paddingVertical="7dp"/>
        </HorizontalScrollView>
    </LinearLayout>
</RelativeLayout>