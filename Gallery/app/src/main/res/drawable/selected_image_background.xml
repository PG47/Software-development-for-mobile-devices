<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="2dp"
        android:right="2dp"
        android:left="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/selected_color"/>
        </shape>
    </item>
    <item
        android:right="0dp"
        android:top="0dp"
        android:left="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="@color/stroke_color"/>
            <size
                android:width="2px"
                android:height="2px"/>
        </shape>
    </item>
</layer-list>
